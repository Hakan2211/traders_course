# ====================================================================================
# Environment Variables
# Copy this file to .env and fill in your values
# ====================================================================================

# Database
# For development: file:./prisma/dev.db
# For production (Docker): file:/app/prisma/data/prod.db
DATABASE_URL=file:./prisma/dev.db

# ====================================================================================
# Admin User Seeding (for production)
# These credentials will be used to create an admin user when the database is first seeded
# ====================================================================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-secure-password-here
ADMIN_USERNAME=admin
ADMIN_NAME=Admin User

# ====================================================================================
# Stripe Configuration
# Get these from your Stripe Dashboard: https://dashboard.stripe.com
# ====================================================================================

# Secret API Key (starts with sk_live_ or sk_test_)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Webhook Signing Secret (starts with whsec_)
# Create a webhook endpoint in Stripe Dashboard pointing to: https://yourdomain.com/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ====================================================================================
# Application URL
# The public-facing URL of your application
# ====================================================================================
VITE_PUBLIC_APP_URL=http://localhost:3000
